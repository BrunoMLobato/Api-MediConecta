generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  cpf      String   @unique
  email    String   @unique
  age      Int
  gender   String
  phone    String
  password String
  appointments Appointment[]
}

model Doctor {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  crm       String   @unique
  name      String
  email     String   @unique
  phone     String
  specialty String
  appointments Appointment[]
}

model Appointment {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime
  year        String
  month       String
  day         String
  hour        String
  minute      String
  doctorId    String
  doctor      Doctor       @relation(fields: [doctorId], references: [id])
  userId      String
  user        User         @relation(fields: [userId], references: [id])
}